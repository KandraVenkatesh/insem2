# Stage 1: Build the backend using Maven
FROM maven:3.9.6-eclipse-temurin-21 AS build
WORKDIR /app

# Copy your local backend source code into the image
COPY . .

# Build the application (skip tests for speed)
RUN mvn clean package -DskipTests

# Stage 2: Deploy with Tomcat
FROM tomcat:9.0-jdk17-temurin
WORKDIR /usr/local/tomcat/webapps

# Copy the built WAR file from the previous stage
COPY --from=build /app/target/*.war ./eventmanager.war

EXPOSE 8080
CMD ["catalina.sh", "run"]
